<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Forgot Password - HTML Template by Colorlib</title>
    <style>

        .text-custom{
            font-family: 'Poppins';
            font-size: 33px;
            font-weight: 700;
        }
        body {
            font-family: 'Poppins';
            background-color: #f1f1f1; 
        }

        .forgot-password-form {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); 
        }

        .forgot-password-image-link {
            color: #6dabe4;
            font-size: 14px;
        }

        .forgot-password-image-link:hover {
            color: #4292dc; /* Màu khi hover */
        }

        .form-submit {
            background-color: #6dabe4;
            border-radius: 5px;
            border: none;
            color: white;
        }

        .form-submit:hover {
            background-color: #4292dc; /* Màu nền khi hover */
        }


        .forgot-password-image-link:hover {
            text-decoration: underline; 
        }

    </style>
</head>

<body class="bg-light">
    <!-- Forgot Password form -->
    <div class="mt-5">
        <section class="forgot-password">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="forgot-password-content">
                            <div class="text-center mb-4">
                                <a class="navbar-brand" href="/">
                                    <img src="/img/LOGO FINAL.png" alt="logo" style="width: 130px; height: auto;">
                                </a>
                            </div>
                            <div class="forgot-password-form p-4 mt-2">
                                <h2 class="form-title text-center text-custom">Forgot Password</h2>
                                <p class="text-center">Please enter your email address to receive a password reset link.</p>
                                {{!-- Form nhập email để lấy lại mật khẩu --}}
                                <form method="POST" action="/user/forgot-password" class="forgot-password-form" id="forgot-password-form">
                                    <div class="form-group mb-3">
                                        <label for="email" class="mb-2"><b>Email</b></label>
                                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required/>
                                    </div>
                                    <div class="form-group form-button text-center">
                                        <input type="submit" class="btn btn-primary w-100 form-submit" style="height: 50px;" value="Send Reset Link"/>
                                    </div>
                                </form>
                            </div>
                            <div class="forgot-password-image text-center mt-3">
                                <a href="/user/login" class="forgot-password-image-link">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Hiển thị thông báo thành công -->
    {{#if success}}
      <div class="alert alert-success alert-dismissible mt-5" role="alert">
        {{success}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fa-solid fa-circle-xmark"></i>
        </button>
      </div>
    {{/if}}

    <!-- Hiển thị thông báo lỗi -->
    {{#if error}}
      <div class="alert alert-danger alert-dismissible mt-5" role="alert">
        {{error}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fa-solid fa-circle-xmark"></i>
        </button>
      </div>
    {{/if}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

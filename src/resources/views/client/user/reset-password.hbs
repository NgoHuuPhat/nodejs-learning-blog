<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Reset Password</title>
    <style>
        .text-custom {
            font-family: 'Poppins';
            font-size: 33px;
            font-weight: 700;
        }

        body {
            font-family: 'Poppins';
            background-color: #f1f1f1; 
        }

        .reset-password-form {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); 
        }

        .reset-password-link {
            color: #6dabe4;
            font-size: 14px;
        }

        .reset-password-link:hover {
            color: #4292dc;
        }

        .form-submit {
            background-color: #6dabe4;
            border-radius: 5px;
            border: none;
            color: white;
            transition: 0.3s;
        }

        .form-submit:hover {
            background-color: #4292dc;
            transform: scale(1.05);
        }

        .alert {
            border-radius: 8px;
        }
    </style>
</head>

<body class="bg-light">
    <div class="mt-5">
        <section class="reset-password">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="reset-password-content">
                            <div class="text-center mb-4">
                                <a class="navbar-brand" href="/home">
                                    <img src="/img/LOGO FINAL.png" alt="logo" style="width: 130px; height: auto;">
                                </a>
                            </div>
                            <div class="reset-password-form p-4 mt-2">
                                <h2 class="form-title text-center text-custom">Reset Password</h2>
                                <p class="text-center">Enter a new password for your account.</p>

                                <!-- Form nhập mật khẩu mới -->
                                <form method="POST" action="/reset-password" id="reset-password-form" class="reset-password-form">
                                    <div class="mb-3">
                                        <label for="password" class="mb-2"><b>New Password</b></label>
                                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter new password" required />
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirm-password" class="mb-2"><b>Confirm Password</b></label>
                                        <input type="password" name="confirm_password" id="confirm-password" class="form-control" placeholder="Confirm new password" required />
                                    </div>

                                    <div class="form-group form-button text-center">
                                        <input type="submit" class="btn btn-primary w-100 form-submit" style="height: 50px;" value="Reset Password"/>
                                    </div>
                                </form>
                            </div>
                            <div class="reset-password-link text-center mt-3">
                                <a href="/login" class="reset-password-link">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Hiển thị thông báo -->
    <div class="container mt-3">
        {{#if success}}
          <div class="alert alert-success text-center">{{success}}</div>
        {{/if}}

        {{#if error}}
          <div class="alert alert-danger text-center">{{error}}</div>
        {{/if}}
    </div>
</body>

</html>

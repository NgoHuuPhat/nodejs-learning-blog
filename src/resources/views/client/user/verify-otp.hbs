<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Verify OTP - HTML Template by Colorlib</title>
    <style>
        .text-custom {
            font-family: 'Poppins';
            font-size: 33px;
            font-weight: 700;
        }

        body {
            font-family: 'Poppins';
            background-color: #f1f1f1;
        }

        .verify-otp-form {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .verify-otp-image-link {
            color: #6dabe4;
            font-size: 14px;
        }

        .verify-otp-image-link:hover {
            color: #4292dc;
        }

        .form-submit {
            background-color: #6dabe4;
            border-radius: 5px;
            border: none;
            color: white;
        }

        .form-submit:hover {
            background-color: #4292dc;
        }

        .verify-otp-image-link:hover {
            text-decoration: underline;
        }

        .alert {
            border-radius: 8px;
        }
    </style>
</head>

<body class="bg-light">
    <!-- Verify OTP form -->
    <div class="mt-5">
        <section class="verify-otp">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="verify-otp-content">
                            <div class="text-center mb-4">
                                <a class="navbar-brand" href="/">
                                    <img src="/img/LOGO FINAL.png" alt="logo" style="width: 130px; height: auto;">
                                </a>
                            </div>
                            <div class="verify-otp-form p-4 mt-2">
                                <h2 class="form-title text-center text-custom">Verify OTP</h2>
                                <p class="text-center">Please enter the OTP sent to email: <span style="color: #4292dc; font-weight: 700;">{{email}}</span><br>to verify your identity.</p>
                                <!-- Form nhập OTP -->
                                <form method="POST" action="/user/verify-otp" class="verify-otp-form" id="verify-otp-form">
                                    <div class="form-group mb-3">
                                        <label for="otp" class="mb-2"><b>OTP</b></label>
                                        <input type="text" name="email" id="email" class="form-control" placeholder="Enter OTP" value="{{email}}" hidden/>
                                        <input type="text" name="otp" id="otp" class="form-control" placeholder="Enter OTP" required/>
                                    </div>
                                    <div class="form-group form-button text-center">
                                        <input type="submit" class="btn btn-primary w-100 form-submit" style="height: 50px;" value="Verify OTP"/>
                                    </div>
                                </form>
                            </div>
                            <div class="verify-otp-image text-center mt-3">
                                <a href="/user/login" class="verify-otp-image-link">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Hiển thị thông báo thành công -->
    {{#if success}}
      <div class="alert alert-success alert-dismissible mt-5" role="alert">
        {{success}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fa-solid fa-circle-xmark"></i>
        </button>
      </div>
    {{/if}}

    <!-- Hiển thị thông báo lỗi -->
    {{#if error}}
      <div class="alert alert-danger alert-dismissible mt-5" role="alert">
        {{error}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fa-solid fa-circle-xmark"></i>
        </button>
      </div>
    {{/if}}
</body>

</html>
